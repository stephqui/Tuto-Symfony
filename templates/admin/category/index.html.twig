{% extends 'admin/admin.html.twig' %}

{% block title "Toutes les catégories" %}

{% block body %}
	<div class="row">
		<div>
			<a class="btn btn btn-primary" href="{{ path('admin.category.create')}}">Création catégorie</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>
						<a href="{{ path('admin.category.edit',{id:category.id}) }}">{{category.name}}</a>
					</td>
					<td>
						<div class="d-flex gap-1">
							<a class="btn btn-primary" href="{{ path('admin.category.edit',{id:category.id}) }}">Editer</a>
							<form method="post" action="{{ path('admin.recipe.delete',{id:category.id}) }}">
								<input type="hidden" name "_method" value="DELETE"/>
								<button type="submit" class="btn btn-danger">Supprimer</button>
							</form>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
